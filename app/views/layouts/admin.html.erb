<!DOCTYPE html>
<html>
  <head>
    <title>Admin Panel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-100 font-sans antialiased text-gray-800">
    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <aside class="w-64 bg-white border-r">
        <div class="p-6 border-b">
          <span class="text-2xl font-extrabold text-blue-600">SurveyBoard</span>
        </div>
        <nav class="p-4 space-y-2 text-sm">
          <%= link_to admin_root_path, class: "flex items-center gap-2 px-4 py-2 rounded hover:bg-gray-100 #{'bg-gray-100 font-semibold text-blue-600' if current_page?(admin_root_path)}" do %>
            <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path d="M3 12l2-2m0 0l7-7 7 7M13 5v6h6"></path>
            </svg>
            <span>Dashboard</span>
          <% end %>

          <%= link_to admin_surveys_path, class: "flex items-center gap-2 px-4 py-2 rounded hover:bg-gray-100 #{'bg-gray-100 font-semibold text-blue-600' if current_page?(admin_surveys_path)}" do %>
            <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path d="M5 13l4 4L19 7"></path>
            </svg>
            <span>Surveys</span>
          <% end %>

          <%= link_to admin_categories_path, class: "flex items-center gap-2 px-4 py-2 rounded hover:bg-gray-100 #{'bg-gray-100 font-semibold text-blue-600' if current_page?(admin_categories_path)}" do %>
            <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
            <span>Categories</span>
          <% end %>

          <%= link_to admin_questions_path, class: "flex items-center gap-2 px-4 py-2 rounded hover:bg-gray-100 #{'bg-gray-100 font-semibold text-blue-600' if current_page?(admin_questions_path)}" do %>
            <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path d="M12 20h9"></path>
              <path d="M12 4h9"></path>
              <path d="M4 9h16"></path>
              <path d="M4 15h16"></path>
            </svg>
            <span>Questions</span>
          <% end %>

          <%= link_to admin_tags_path, class: "flex items-center gap-2 px-4 py-2 rounded hover:bg-gray-100 #{'bg-gray-100 font-semibold text-blue-600' if current_page?(admin_tags_path)}" do %>
            <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path d="M5 3h14a2 2 0 012 2v14a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2z"></path>
            </svg>
            <span>Tags</span>
          <% end %>
        </nav>
      </aside>

      <!-- Main Content -->
      <div class="flex-1 flex flex-col">
        <!-- Navbar -->
        <header class="bg-white shadow-sm px-6 py-4 flex justify-between items-center border-b">
          <div class="text-xl font-semibold text-gray-700">
            <%= content_for?(:breadcrumbs) ? yield(:breadcrumbs) : "Dashboard" %>
          </div>
          <div>
            <%= link_to "Sign out", destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: "text-sm text-gray-600 hover:text-red-500 transition" %>
          </div>
        </header>

        <!-- Page Content -->
        <main class="flex-1 p-6 overflow-y-auto">
          <%= yield %>
        </main>
      </div>
    </div>
  </body>
</html>
